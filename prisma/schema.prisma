generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TableStatus {
  AVAILABLE
  RESERVED
  OCCUPIED
  DIRTY
}

enum TableShape {
  RECTANGLE
  CIRCLE
  SQUARE
}

enum RestaurantStatus {
  ACTIVE
  INACTIVE
  DRAFT
}

model Restaurant {
  id        String  @id @default(cuid())
  name      String
  slug      String  @unique
  phone     String? @unique
  hoursJson Json?

  // Optional Location Fields
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  zipCode      String?
  country      String? @default("USA")

  // Branding
  logoUrl    String?
  websiteUrl String?

  // Setup Progress
  isPublished Boolean @default(false)
  setupStep   Int     @default(1) // 1=info, 2=layout, 3=hours, 4=done

  // Status (Soft control)
  status RestaurantStatus @default(DRAFT)

  // Audit
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tables       Table[]
  reservations Reservation[]
  admins       User[]        @relation("RestaurantAdmins")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  role         UserRole @default(STAFF)
  password     String?
  restaurantId String?

  reservations Reservation[]

  Restaurant Restaurant[] @relation("RestaurantAdmins")

  Reservation Reservation[] @relation("ReservationStaff")
}

model Table {
  id     String  @id @default(cuid())
  number Int // Table number (ex: 1, 2, 10)
  name   String? // Optional: “Window Table”, “Booth A”
  seats  Int // Seating capacity

  status  TableStatus @default(AVAILABLE)
  section String? // “Patio”, “Main Hall”, “Bar”

  // For floor layout / drag & drop
  x      Int        @default(0)
  y      Int        @default(0)
  shape  TableShape @default(RECTANGLE)
  width  Int        @default(80) // px
  height Int        @default(80) // px

  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  reservations Reservation[]
}

enum ReservationSource {
  ONLINE // Website or app booking
  PHONE // Staff received call
  WALK_IN // Walk-in guest
  POS_SYNC // Synced from restaurant POS
}

model Reservation {
  id          String  @id @default(cuid())
  checkInCode String? @unique

  guestName    String
  phone        String
  email        String? // Optional contact email
  partySize    Int
  date         DateTime // Reservation date (full timestamp now)
  time         String // Deprecated later — kept for UI display
  durationMins Int               @default(90) // Smart availability window
  status       ReservationStatus @default(PENDING)

  source        ReservationSource @default(ONLINE)
  notes         String? // Allergies, wheelchair, occasion, etc.
  depositAmount Float? // Optional deposit

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  seatedAt    DateTime?
  completedAt DateTime?

  // Relations
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  tableId String?
  table   Table?  @relation(fields: [tableId], references: [id])

  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])

  staffId String? // Assigned Host/Server
  staff   User?   @relation("ReservationStaff", fields: [staffId], references: [id])

  @@index([restaurantId, date])
  @@index([status])
  @@index([customerId])
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  phone     String    @unique
  email     String?   @unique
  notes     String?
  tags      String[] // e.g. ["VIP", "Allergy: Nuts"]
  visits    Int       @default(0)
  lastVisit DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  reservations Reservation[]
}

enum UserRole {
  OWNER
  MANAGER
  STAFF
  CUSTOMER
  HOST
  SERVER
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
  SEATED
}
