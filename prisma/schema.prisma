generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TableStatus {
  AVAILABLE
  RESERVED
  OCCUPIED
  DIRTY
}

enum TableShape {
  RECTANGLE
  CIRCLE
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tables       Table[]
  reservations Reservation[]
  admins       User[]
}

model User {
  id           String      @id @default(cuid())
  email        String      @unique
  name         String?
  role         UserRole    @default(STAFF)
  password     String
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])

  reservations Reservation[]
}

model Table {
  id     String  @id @default(cuid())
  number Int // Table number (ex: 1, 2, 10)
  name   String? // Optional: “Window Table”, “Booth A”
  seats  Int // Seating capacity

  status  TableStatus @default(AVAILABLE)
  section String? // “Patio”, “Main Hall”, “Bar”

  // For floor layout / drag & drop
  x      Int        @default(0)
  y      Int        @default(0)
  shape  TableShape @default(RECTANGLE)
  width  Int        @default(80) // px
  height Int        @default(80) // px

  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  reservations Reservation[]
}

model Reservation {
  id        String            @id @default(cuid())
  guestName String
  phone     String
  partySize Int
  date      DateTime
  time      String
  status    ReservationStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  tableId  String?
  table    Table?    @relation(fields: [tableId], references: [id])
  seatedAt DateTime?

  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

enum UserRole {
  OWNER
  MANAGER
  STAFF
  CUSTOMER
  HOST
  SERVER
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
  SEATED
}
